<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="www.mutou.com.mtmusic">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/myluncher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/ThemeSplash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:theme="@style/MainTranslucentTheme" >

        </activity>
        <activity
            android:name="www.mutou.com.local.LocalMain"
            android:theme="@style/LocalMainTranslucentTheme" />
        <activity
            android:name="www.mutou.com.url.UrlMain"
            android:theme="@style/LocalMainTranslucentTheme">

        </activity>
        <activity
            android:name="www.mutou.com.url.UrlDetails"
            android:theme="@style/LocalMainTranslucentTheme" />

        <service
            android:name="www.mutou.com.service.PlayerService"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="www.mutou.com.service.testUrlPlayer"
            android:enabled="true"
            android:exported="true" />
        <service
            android:name="www.mutou.com.service.testDetailService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name="www.mutou.com.local.Local" />
        <activity android:name="www.mutou.com.local.Cache" />
        <activity android:name="www.mutou.com.url.UrlMV" />
        <activity android:name=".DetailActivity"
            android:theme="@style/MainTranslucentTheme"
            >

        </activity>
    </application>

</manifest>