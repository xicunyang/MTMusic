<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.mutou.com.mtmusic.DetailActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/MyDark"
    >
    <!--非菜单布局-->
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_localMain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_collapseMode="pin"
            android:theme="@style/toolbar_theme"
            android:background="@color/MyDark"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已是两条路上的人"
                    android:textSize="20dp"
                    android:textColor="#fff"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="70dp"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/detail_singerAlum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/appbar_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="赵雷"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--吉姆餐厅--"
            android:textSize="15sp"
            android:textColor="#999999"
            />
    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_centerImage"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerInParent="true"
        app:civ_border_color="#fff"
        app:civ_border_width="5dp"
        android:src="@drawable/changpian"
        />
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@+id/detail_singerAlum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >
        <ImageView
            android:id="@+id/detail_yaobi"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/details_yaobi"
            android:layout_marginLeft="125dp"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/detail_zhidian"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        >
        <SeekBar
            android:id="@+id/detail_seekbar"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:thumbTint="#fff"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/seekbar_background"
            android:focusable="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            />
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/detail_prev"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/detail_left"
                />

            <ImageView
                android:id="@+id/detail_playOrPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/detail_playing"
                />

            <ImageView
                android:id="@+id/detail_next"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/detail_right"
                />
        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/openService"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="服务"
        android:layout_gravity="center"
        android:visibility="gone"
        />

</RelativeLayout>
