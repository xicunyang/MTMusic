<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="#fff"
    android:paddingBottom="20dp"
    android:paddingLeft="22.5dp"
    android:paddingRight="22.5dp"
    android:paddingTop="20dp"
    >
    <Button
        android:id="@+id/urlMain_bottom_download"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/ripple_url_main_bottom_item"
        android:gravity="center"
        android:text="下载此歌曲"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginBottom="3dp"
        />
    <Button
        android:id="@+id/urlMain_bottom_like"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/ripple_url_main_bottom_item"
        android:gravity="center"
        android:text="收藏此歌曲"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginBottom="3dp"
        />
    <Button
        android:id="@+id/urlMain_bottom_playmv"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/ripple_url_main_bottom_item"
        android:gravity="center"
        android:text="播放MV"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginBottom="3dp"
        />


</LinearLayout>