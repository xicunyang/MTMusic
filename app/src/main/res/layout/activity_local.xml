<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="www.mutou.com.local.Local">
    <ListView
        android:id="@+id/local_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawSelectorOnTop="false"
        android:scrollbars="vertical"
        android:background="@color/MyDark"
        android:divider="#44ffffff"
        android:dividerHeight="1px"
        >
    </ListView>
    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/local_main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        fab:fab_colorNormal="#2c2c2b"
        fab:fab_colorPressed="#5c5c5b"
        android:src="@drawable/local_detail_fab"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        fab:backgroundTint="#fff"
        android:visibility="invisible"
        />
</RelativeLayout>
